<!DOCTYPE html>
<html>
  <head>
    <title>Games Ladder</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
  </head>
<body>

  <div id="nav">
    <%= link_to 'Home', root_path %>
    <% if current_user %>
      | <%= link_to "Edit Profile", edit_player_path(current_user.id) %>
      | <%= link_to "Logout", :logout, method: :post %>
      <% if current_user.favourite_category %>
        | <%= link_to current_user.favourite_category.name, current_user.favourite_category %>
      <% end %>
      <% if current_user.favourite_game %>
        | <%= link_to current_user.favourite_game.name, current_user.favourite_game %>
      <% end %>

    <% else %>
      <%= link_to "Register", new_player_path %> |
      <%= link_to "Login", :login %> |
      <%= link_to 'Sign in with Google', auth_at_provider_path(:provider => :google) %>
    <% end %>
  </div>
  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>

  <%= yield %>

</body>
</html>
